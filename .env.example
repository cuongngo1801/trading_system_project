# Environment Variables Template

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db
TIMESCALE_DB_URL=postgresql://username:password@localhost:5432/trading_timescale

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=trading-system
KAFKA_AUTO_OFFSET_RESET=earliest

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MetaTrader 5 Configuration
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server
MT5_PATH=/Applications/MetaTrader\ 5/MetaTrader\ 5.app

# Trading Configuration
SYMBOLS=EURUSD,XAUUSD,US30
TIMEFRAMES=1m,1H,4H,1D
RISK_PER_TRADE=0.02
MAX_DRAWDOWN=0.15

# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
ECONOMIC_CALENDAR_API_KEY=your_economic_calendar_key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Notification
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
